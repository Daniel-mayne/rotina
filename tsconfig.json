{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "lib": [
      "ES2021.String"
    ],
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": "./",
    "checkJs": false,
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/auth",
      "@adonisjs/lucid",
      "adonis5-swagger",
      "@adonisjs/drive-s3",
      "@adonisjs/mail",
      "@adonisjs/view",
      "@mezielabs/adonis-stripe",
    ]
  }
}
