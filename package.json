{
  "name": "rotina-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production --ignore-ts-errors",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "packageManager": "pnpm@8.0.0",
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "engines": {
    "node": "18.x"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.6",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "@types/proxy-addr": "^2.0.3",
    "@types/source-map-support": "^0.5.10",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "pino-pretty": "^10.3.1",
    "prettier": "^2.8.8",
    "typescript": "~4.6.4",
    "youch": "^3.3.3",
    "youch-terminal": "^2.2.3"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/drive-s3": "^1.3.3",
    "@adonisjs/lucid": "^18.4.2",
    "@adonisjs/lucid-slugify": "^2.2.1",
    "@adonisjs/mail": "^8.2.1",
    "@adonisjs/repl": "^3.1.11",
    "@adonisjs/view": "^6.2.0",
    "@melchyore/adonis-cache": "^1.0.6",
    "@mezielabs/adonis-stripe": "^1.0.7",
    "@rocketseat/adonis-bull": "^1.0.4",
    "@sendgrid/mail": "^7.7.0",
    "adonis-lucid-filter": "^4.1.1",
    "adonis5-swagger": "^1.4.1",
    "axios": "^0.27.2",
    "luxon": "^3.4.4",
    "mysql2": "^3.9.2",
    "nodemailer": "^6.9.12",
    "nodemailer-sendgrid": "^1.0.3",
    "phc-argon2": "^1.1.4",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.14",
    "source-map-support": "^0.5.21"
  }
}